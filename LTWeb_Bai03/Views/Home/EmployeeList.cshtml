@model IEnumerable<LTWeb_Bai03.Models.Employee>

@{
    ViewBag.Title = "BẢNG EMPLOYEE";
}

<h2>BẢNG EMPLOYEE</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Mã NV</th>
        <th>Họ và Tên</th>
        <th>Giới tính</th>
        <th>Thành phố</th>
        <th>Ảnh</th>
        <th>Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Gender</td>
            <td>@item.City</td>
            <td>
                <img src="@item.Img" width="60" height="60" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Thêm mới nhân viên", "Create", null, new { @class = "btn btn-primary" })
</p>
